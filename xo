	private void wygrana() 
	{
		//poziomo
		//WYGRANE 1,2,3
		if(gracz==1&&p1xo.equals("X1")&&p2xo.equals("X2")&&p3xo.equals("X3"))
		{
			System.out.println("WYGRYWA GRACZ 1");
			gracz1XO=gracz1XO+1;
			System.out.println("X:"+gracz1XO+"  "+"O:"+gracz2XO);
